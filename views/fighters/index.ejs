            <%if(weightClasses[i].fighters.includes(fighter._id)){%>
                <td><%=weightClasses[i].name%></td>
            <%}%>
          <%}%> -->
          <td>
            <form action="/fighters/<%= fighter._id %>?_method=DELETE" method="POST">
                <button type="submit">delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
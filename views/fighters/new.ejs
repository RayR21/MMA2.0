<%- include('../partials/header') %>

<h2>Enter a New Fighter</h2>
<form action="/fighters" method="POST">
  <label>Name:
    <input type="text" name="name">
  </label><br>
  <label>Fight Date:
    <input type="datetime-local" name="upcomingFight">
  </label><br>
  <label> Rating
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </label><br>
  <label> wins:
    <input type="number" name="wins">
  </label><br>
  <label>losses:
    <input type="number" name="losses" >
  </label><br>
  <button type="submit">Add fighters</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>